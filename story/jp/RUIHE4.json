":305110},{"typewriter":{"speedUp":0.01,"speed":0.05},"nameColor":"#a9f548","say":"……","withoutPainting":true,"actor":0,"side":0,"bgName":"bg_story_nepu1","dir":1},{"typewriter":{"speedUp":0.01,"speed":0.05},"nameColor":"#a9f548","say":"……ふふ、お主の答え、しかと聞いたぞ。瑞鶴のこと、よろしく頼むよ。","dir":1,"actorName":"{namecode:82}","side":2,"painting":{"time":1,"alpha":0.3},"actor":305110,"bgName":"bg_story_nepu1","blackBg":true}],"mode":2,"fadein":1.5,"id":"RUIHE4","fadeOut":1.5}